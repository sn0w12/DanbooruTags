{
  "manifest_version": 2,
  "name": "Tag List Extractor",
  "version": "1.0",
  "description": "Extracts 'data-tag-name' values from Danbooru",
  "icons": {
    "16": "danbooru-logo-16.png",
    "48": "danbooru-logo-48.png",
    "128": "danbooru-logo-128.png"
  },
  "chrome_url_overrides": {
  "fileBrowserHandler": "popup.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["http://*/", "https://*/", "storage", "activeTab", "fileSystem" ],
  "content_scripts": [
    {
      "matches": ["https://danbooru.donmai.us/posts/*"],
      "js": ["contentScript.js"]
    }
  ]
}
